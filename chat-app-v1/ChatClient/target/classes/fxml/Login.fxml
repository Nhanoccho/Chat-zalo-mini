<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.chatapp.client.controller.LoginController"
      prefHeight="400.0" prefWidth="350.0" style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <Label text="Chat Application" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2196F3;">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Label text="Welcome back! Please login to continue." style="-fx-text-fill: #666;">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>

        <VBox spacing="15.0">
            <Label text="Username:" style="-fx-font-weight: bold;" />
            <TextField fx:id="usernameField" promptText="Enter your username"
                      style="-fx-pref-height: 35; -fx-background-radius: 5;">
            </TextField>

            <Label text="Password:" style="-fx-font-weight: bold;">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Label>
            <PasswordField fx:id="passwordField" promptText="Enter your password"
                          style="-fx-pref-height: 35; -fx-background-radius: 5;">
            </PasswordField>

            <Label fx:id="messageLabel" style="-fx-font-size: 12;">
                <VBox.margin>
                    <Insets top="5.0" />
                </VBox.margin>
            </Label>

            <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                   maxWidth="Infinity"
                   style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-pref-height: 40; -fx-background-radius: 5; -fx-cursor: hand;">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Button>

            <HBox alignment="CENTER" spacing="5.0">
                <VBox.margin>
                    <Insets top="15.0" />
                </VBox.margin>
                <Label text="Don't have an account?" />
                <Hyperlink fx:id="registerLink" text="Register here" onAction="#handleRegister"
                          style="-fx-text-fill: #2196F3;" />
            </HBox>
        </VBox>
    </VBox>
</VBox>
